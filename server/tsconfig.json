{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "outDir": "./dist",

    "strict": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "sourceMap": true,

    "resolveJsonModule": true,

    "noImplicitAny": true,
    "noUnusedLocals": true
  },
  "include": ["src/**/*", "prisma/**/*"]
}
